<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" type="text/css" href="/style/modules/favorite-button.css" />
  </head>
  <body>
      <%- include('../partials/favorite-button') %>
      <%- include('../partials/header') %>
  <div class="wrapper">
    <%- include('../partials/favorite-button') %>
    <div class="poke-box">
      <img src="<%= pokemon.imageURL %>" alt="<%= pokemon.name%>">
      <h2><%= pokemon.id %></h2>
      <h2><%= pokemon.name %></h2>
      <span><%= pokemon.species %></span>
      <ul>
        <li>HT: <%= pokemon.height %>m</li>
        <li>WT: <%= pokemon.weight %>kg</li>
      </ul>
    </div>
    <div class="type-box">
      <ul>
        <li><%= pokemon.typeOne %></li>
        <li> <%= pokemon.typeTwo %></li>
      </ul>
    </div>
    <div class="weakness-box">
      <ul>
        <li><%= pokemon.weakOne %></li>
        <li><%= pokemon.weakTwo %></li>
      </ul>
    </div>
    <div class="description-box"><%= pokemon.description %></div>
  </div>

  <%- include('../partials/jquery')%>
</body>
</html>